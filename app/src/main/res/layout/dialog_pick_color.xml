<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_round_corner">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Choose color"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/text_group" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/darkerGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:drag_edge="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_color_blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorBlue" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_color_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorRed" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_color_pink"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorPink" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_color_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorGreen" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_color_violet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorViolet" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/main_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Main color"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_header" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_color_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorMain"
                    app:civ_border_color="@color/darkerGray"
                    app:civ_border_width="1dp"/>

            </RelativeLayout>


        </com.daimajia.swipe.SwipeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:src="@color/darkerGray" />

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:drag_edge="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/title_color_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorRed" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/title_color_black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/textBlack"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/title_color_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/white" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/title_color_yellow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorYellow" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/title_color_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorGreen" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/title_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Title color"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_header" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/title_color_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/white"
                    app:civ_border_color="@color/darkerGray"
                    app:civ_border_width="1dp"/>

            </RelativeLayout>


        </com.daimajia.swipe.SwipeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:src="@color/darkerGray" />

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:drag_edge="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/text_color_black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorBlack" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/text_color_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorWhite" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/text_color_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorGreen" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/text_color_pink"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorPink" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/text_color_violet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/colorViolet" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/text_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Text color"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_header" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/text_color_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@color/textBlack"
                    app:civ_border_color="@color/darkerGray"
                    app:civ_border_width="1dp"/>

            </RelativeLayout>


        </com.daimajia.swipe.SwipeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="end">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:background="@color/transparent"
            android:textColor="@color/textBlack"/>
        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:background="@color/transparent"
            android:textColor="@color/colorMain"/>

    </LinearLayout>
</LinearLayout>